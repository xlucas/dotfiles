# i3 config file (v4)


#=======================
# Variables
#=======================
set $mod Mod4
set $black       #212121
set $darkblack   #000000
set $red         #fb4934
set $darkred     #cc241d
set $green       #b8bb26
set $gray        #8f8f8f
set $darkgreen   #98971a
set $darkgray    #1a1a1a
set $midgray     #636363
set $lightgray   #c9c9c9
set $yellow      #fabd2f
set $darkyellow  #d79921
set $blue        #83a598
set $darkblue    #458588
set $magenta     #d3869b
set $darkmagenta #b16286
set $cyan        #8ec07c
set $darkcyan    #689d6a
set $white       #ebdbb2
set $darkwhite   #a89984
set $background  #000000
set $transparent #000000FF<Paste>


#=======================
# Fonts
#=======================
font pango:Hack, FontAwesome 11


#=======================
# Windows
#=======================
new_window 1pixel
hide_edge_borders both
client.focused $midgray $midgray $midgray $midgray $midgray


#=======================
# Shortcuts
#=======================
# Press $mod+mouse to drag windows
floating_modifier $mod

# Interactons with the i3 daemon
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-msg exit"

# Basic mappings
bindsym $mod+d exec dmenu_run -fn 10x20
bindsym $mod+Return exec gnome-terminal
bindsym $mod+Shift+Q kill
bindsym $mod+r mode "resize"

# Additional user-defined shortcuts
bindsym $mod+Shift+s exec screenlock

# Windows focus change
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Focus tiling/floating windows
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Toggle fullscreen on current container
bindsym $mod+f fullscreen

# Focus container's parent window
bindsym $mod+Shift+space floating toggle

# Change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Split container
bindsym $mod+h split h
bindsym $mod+v split v

# Workspaces interactions
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9


#=======================
# Workspaces
#=======================
workspace 1 output DVI-0
workspace 2 output HDMI-0
workspace 3 output DVI-0
workspace 4 output HDMI-0
workspace 5 output DVI-0
workspace 6 output HDMI-0
workspace 7 output DVI-0
workspace 8 output HDMI-0
workspace 9 output HDMI-0

mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

assign [class="Firefox"]    1
assign [class="Nautilus"]   8
assign [class="Pidgin"]     9


#=======================
# Menu bars
#=======================
bar {
	font pango:Inconsolata, FontAwesome 10
	position bottom
	tray_output none
	status_command ~/.i3/bumblebee-status/bumblebee-status -m ping publicip nic xrandr cpu memory disk brightness pasink battery weather datetime layout -t greyish-powerline

	colors {
	statusline         $midgray
	background         $darkgray
	                   #BORDER   BACKGROUND TEXT
	focused_workspace  $darkgray $darkgray  $lightgray
	inactive_workspace $darkgray $darkgray  $midgray
	active_workspace   $darkgray $darkgray  $midgray
	urgent_workspace   $red      $red       $transparent
	}
}


#=======================
# Startup
#=======================
exec xrandr --output HDMI-0 --right-of DVI-0
exec xset s off -dpms
exec /usr/bin/fluxgui &
exec /usr/bin/firefox
exec /usr/bin/pidgin

# Run terminal containers
exec i3-msg 'workspace 2; exec /usr/bin/gnome-terminal'
exec i3-msg 'workspace 3; exec /usr/bin/gnome-terminal'
exec i3-msg 'workspace 4; exec /usr/bin/gnome-terminal'
exec i3-msg 'workspace 5; exec /usr/bin/gnome-terminal'
exec i3-msg 'workspace 6; exec /usr/bin/gnome-terminal'

# Focus workspace 1 after startup
exec sleep 1 && i3-msg 'workspace 1;'
exec sleep 1 && i3-msg 'workspace 2;'
